<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_item">

    <com.haozhang.widget.SlantedTextView xmlns:sland="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sland"
        android:layout_width="100dp"
        android:layout_height="100dp"
        sland:slantedBackgroundColor="@color/secondary_text_90"
        sland:slantedLength="40dp"
        sland:slantedMode="right"
        sland:slantedTextColor="@color/primary_light"
        sland:slantedTextSize="18sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="match_parent"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="5dp"
        android:layout_height="wrap_content"
        fresco:viewAspectRatio="1.33"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:padding="12dp"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:id="@+id/who"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/img">
    </TextView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/who"
        android:background="#a0111111"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:textColor="#ffffff"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/date"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img"
        android:gravity="right|bottom"
        android:padding="10dp"
        />

</RelativeLayout>